{
  "buildCommand": "npx ng build --configuration production",
  "outputDirectory": "dist/portfolio-ui/browser",
  "functions": {
    "api/[...path].js": {
      "memory": 256,
      "maxDuration": 30
    }
  },
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/[...path]" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
